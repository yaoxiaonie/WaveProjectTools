<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.WaveProjectTools.Material" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/foreground</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:forceDarkAllowed">true</item>
    </style>
    <style name="Theme.WaveProjectTools.AppCompat" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/foreground</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:forceDarkAllowed">true</item>
    </style>
</resources>